# PostgreSQL connection string used by the API and monitoring worker.
DATABASE_URL=postgresql+asyncpg://uptime:uptime@localhost:5432/uptime

# Host interface to bind the web server to.
APP_HOST=0.0.0.0

# Port exposed by the web server.
APP_PORT=8000

# Maximum number of checks executed concurrently.
CONCURRENCY=20

# Number of days to retain historical check data.
RETENTION_DAYS=35

# Timezone used for date/time display in the UI.
APP_TIMEZONE=Europe/Amsterdam

# Toggle authentication for write actions (create/update/delete targets).
AUTH_ENABLED=true

# Single username allowed to sign in when AUTH_ENABLED=true.
AUTH_USERNAME=admin

# Password for AUTH_USERNAME.
AUTH_PASSWORD=change-me

# Secret key used to sign session cookies (set a strong value in production).
SESSION_SECRET_KEY=change-me-session-secret

# Session lifetime in seconds.
SESSION_MAX_AGE=86400
